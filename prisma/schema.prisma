datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Paciente {
  cpf               String        @id
  nome              String
  email             String        @unique
  telefone          String
  data_nascimento   String
  empresa           Empresa       @relation(fields: [empresa_cnpj], references: [cnpj])
  empresa_cnpj      String
  grupo_de_risco    GrupoDeRisco? @relation(fields: [grupo_de_risco_id], references: [id])
  grupo_de_risco_id Int?
  Consulta          Consulta[]
}

model Empresa {
  cnpj         String     @id
  razaoSocial  String     @unique
  nomeFantasia String?
  telefone     String?
  email        String
  endereco     String
  cidade       String
  estado       String
  cep          String
  empregados   Paciente[]
  consultas    Consulta[]
}

model Exame {
  CODSUS          String         @id
  nome            String
  descricao       String
  importancia     String
  consulta        Consulta[]     @relation("ConsultaExames")
  grupos_de_risco GrupoDeRisco[] @relation("GrupoDeRiscoExames")
}

model GrupoDeRisco {
  id             Int        @id @default(autoincrement())
  nome           String
  descricao      String
  examesDeRotina Exame[]    @relation("GrupoDeRiscoExames")
  pacientes      Paciente[]
}

model Consulta {
  id           Int      @id @default(autoincrement())
  data         DateTime
  status       String
  Empresa      Empresa  @relation(fields: [empresa_cnpj], references: [cnpj])
  empresa_cnpj String
  paciente     Paciente @relation(fields: [paciente_cpf], references: [cpf])
  paciente_cpf String
  grupoDeRisco String?
  exames       Exame[]  @relation("ConsultaExames")
}
